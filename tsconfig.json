{
    "compilerOptions": {
        "resolveJsonModule": true,
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "allowJs": true,
        "preserveConstEnums": true,
        "outDir": "./build",
        "sourceMap": true,
        "target": "ES2022",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "declaration": true,
        "lib": [
            "ES2022"
        ],
        "types": [
            "node",
            "mocha"
        ]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}