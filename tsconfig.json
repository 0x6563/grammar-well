{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noImplicitAny": false,
        "removeComments": true,
        "allowJs": true,
        "preserveConstEnums": true,
        "rootDir": "./src",
        "outDir": "./build",
        "sourceMap": true,
        "target": "ESNext",
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "declaration": true,
        "lib": [
            "ESNext"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}